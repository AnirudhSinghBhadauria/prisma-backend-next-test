generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      String   @id @default(uuid())
  name    String?
  email   String   @unique
  age     Int      @default(1)
  role    Role     @default(BASIC)
  posts   Post[]
  profile Profile?

  @@unique([email, age])
}

model Profile {
  id      String  @id @default(uuid())
  name    String
  age     Int
  isAdmin Boolean
  adress  String
  User    User    @relation(fields: [userId], references: [id])
  userId  String  @unique
}

model Post {
  id         String   @id @default(uuid())
  name       String
  likes      Int      @default(0)
  postNumber Int      @unique @default(autoincrement())
  heading    String   @unique
  slug       String   @default(uuid())
  author     User     @relation(fields: [authorId], references: [id])
  authorId   String   @default(uuid())
  category   Category @relation(fields: [catId], references: [id])
  catId      String   @default(uuid())

  updatedAt DateTime @updatedAt

  @@unique([slug, name])
  @@index([authorId])
  @@index([catId])
}

model Category {
  id     String @id @default(uuid())
  genere Genere @default(TECH)
  post   Post[]
}

enum Genere {
  TECH
  NEWS
  ENTERTAINTMENT
}

enum Role {
  ADMIN
  BASIC
  PLUS
}
